@prefix dash: <http://datashapes.org/dash#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix schema: <http://schema.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<http://localhost/configuration> a <urn:DataValidatorConfiguration> ;
    <urn:rule> [
        <urn:pattern> "*.json", "*.jsonld" ;
        <urn:validator>
            [ a <urn:JacksonJsonSyntax> ; ],
            [ a <urn:EveritJsonSchema> ;
                <urn:schema> "{ \"type\": \"object\" } " ;
            ] ;
    ], [
         <urn:pattern> "*.ttl", "*.jsonld" ;
         <urn:validator>
            [ a <urn:JenaRdfSyntax> ; ],
            [ a <urn:JenaRdfSchaclSchema> ;
                <urn:shaclUrl> <http://skoda.projekty.ms.mff.cuni.cz/www/temp/shacl-000.ttl> ;
            ]
    ], [
         <urn:pattern> "*.xml" ;
         <urn:validator>
            [ a <urn:JacksonXmlSyntax> ; ],
            [ a <urn:XercesXmlSchema> ;
                <urn:schemaUrl> <http://skoda.projekty.ms.mff.cuni.cz/www/temp/schema-000.xsd> ;
            ]
    ] ;
    <urn:path> "./" ;
    <urn:recursive> true ;
.
